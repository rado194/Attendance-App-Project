<form class="" action="/students/<%= @student.student_id %>" method="post">

  <% if @student.student_id%>
		<input type="hidden" name="_method" value="put">
	<% end %>

  <hr>
    <div class="form-group col-sm-3">
      <label>First Name</label>
      <input class="form-control" type="text" name="first_name" value="<%= @student.first_name %>" placeholder="First Name">
    </div>
    <div class="form-group col-sm-3">
      <label>Last Name</label>
      <input class="form-control" type="text" name="last_name" value="<%= @student.last_name %>" placeholder="Last Name">
    </div>

  <div class="form-group col-sm-3">
    <label>Course ID</label>
    <select class="form-control " name="course_id">
      <% @courses.each do |course| %>
        <option value="<%= course.course_id %>">
          <%= course.name %>
        </option>
      <% end %>
    </select>
  </div>
<hr>
  <div class="form-group pl-3">
    <input class="btn btn-primary" type="submit" name="" value="Submit">
  </div>
</form>
